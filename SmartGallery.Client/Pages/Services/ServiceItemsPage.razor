@page "/AddServiceItems/{ServiceId:int}"

<head>
<link rel="stylesheet" href="/css/main.css" />
</head>
<header class="header position-relative">
    <div class="icon">
        <i @onclick="NavigateToHome" class="fas fa-arrow-left" aria-hidden="true"></i>
    </div>
    <a class="logo"><span>L</span>ife <span>C</span>hanger</a>
    <div class="icon">
        <AuthorizeView>
            <i>Hello , @(context.User.Identity!.Name)</i>
            <i @onclick="LogoutAsync">Log Out</i>
        </AuthorizeView>
    </div>
</header>
<div class="login-form ">
    <EditForm Model="@viewModel" OnValidSubmit="HandleValidSubmitAsync">
        <h3>Service Items</h3>
        <div class="form-group">
            <label>Service Item Name</label>
            <InputText class="box" @bind-Value="@viewModel.Name" placeholder="Enter Service Item Name" />
            <ValidationMessage For="@(() => viewModel.Name)" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn">Add your Service</button>
        </div>
    </EditForm>
</div>